@model DatosMaestria
@{
    ViewData["Title"] = "Eliminar Maestria";
    int Posicion = 0;
    int count = 0;
}
<h1>Eliminar Maestria </h1>

<div class="col-6 ">
    <h5 class="text-primary">Selecciona la Maestria</h5>
    <form method="post">
        <select name="opciones" class="form-control">
            <option>Seleccionar</option>
            @foreach (var Data in Model.Maestrias)
            {
                <option value="@Data.ID">@Data.ID) @Data.NOMBRE</option>

                @(count++);

            }
        </select>
        <br />

        <div class="text-md-left">
            <button class="btn btn-info" type="submit">Cargar Detalles</button>
        </div>
    </form>
</div>

<br />

@ViewBag.Count
<div class="row">
    <div class="col-6 formulario">
        <form method="post">
            <div class="form-group">
                <h5>Codigo</h5>
                <input id="ID" asp-for="IDSelected" class="form-control" value="@ViewData["Codigo"]" readonly Required />
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input class="form-control" value="@ViewData["Nombre"]" readonly Required />
            </div>
           
            <div class="form-group">
                <h5>Duracion (Años)</h5>
                <input class="form-control" value="@ViewData["Duracion"]" readonly Required />
            </div>
            <div class="form-group">
                <h5>ID del Docente</h5>
                <input class="form-control" value="@ViewData["IDDocente"]" readonly Required />
            </div>

            <button type="submit" name="Delete" value="delete" class="btn btn-danger">Eliminar</button>
        </form>
    </div>


</div>

