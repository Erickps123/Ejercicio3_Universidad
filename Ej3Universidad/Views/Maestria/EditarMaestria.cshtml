@model Maestria
@{
    DatosMaestria maestria = new DatosMaestria();
    ViewData["Title"] = "Modificar Maestria";
    DatosDocente datos = new DatosDocente();
    ViewBag.IDDocente = datos.Docentes;
    int i = 0;
    <meta charset="UTF-8">
}
<h1>Editar Maestria </h1>
<div class="col-6 ">
    <h5 class="text-primary">Selecciona la Maestria</h5>
    <form method="post">
        <select name="opciones" class="form-control">
            <option>Seleccionar</option>
            @foreach (var Data in maestria.Maestrias)
            {

                <option value="@Data.ID"> @Data.ID) @Data.NOMBRE</option>
                @(i++)
            }
        </select>
        <br />
        <div class="text-md-left">
            <button class="btn btn-info" type="submit">Cargar Detalles</button>
        </div>
    </form>
</div>
<br />
<div class="row">
    <div class="col-6 formulario">
        <form method="post" role="form">
            <div class="form-group">
                <h5>Codigo</h5>
                <input id="ID" asp-for="ID" class="form-control" value="@ViewData["Codigo"]" readonly required />
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input class="form-control" asp-for="NOMBRE" value="@ViewData["Nombre"]" Required />
            </div>
            <div class="form-group">
                <h5>Duracion</h5>
                <input class="form-control" asp-for="DURACION" value="@ViewData["Duracion"]"Required />
            </div>
            <div class="form-group">
                <h5>Nombre del Docente</h5>
                <select asp-for="ID_DOCENTE" class="form-control" required>

                    @foreach (var Datos in (List<Docente>)ViewBag.IDDocente)
                    {
                        <option value="@Datos.ID">@Datos.ID) @Datos.NOMBRE </option>
                    }
                </select>
            </div>
            <button type="submit" name="Save" value="save" class="btn btn-success">Guardar Cambios</button>
        </form>
    </div>


</div>

