@model Docente
@{
    DatosDocente docente = new DatosDocente();
    ViewData["Title"] = "Editar Docente";
    DatosUniversidad datos = new DatosUniversidad();
    ViewBag.IDUniversidad = datos.Universidades;
    int i = 0;
    <meta charset="UTF-8">
}
<h1>Editar Universidad </h1>
<div class="col-6 ">
    <h5 class="text-primary">Selecciona el docente</h5>
    <form method="post">
        <select name="opciones" class="form-control">
            <option>Seleccionar</option>
            @foreach (var Data in docente.Docentes)
            {

                <option value="@Data.ID"> @Data.ID) @Data.NOMBRE</option>
                @(i++)
            }
        </select>
        <br />
        <div class="text-md-left">
            <button class="btn btn-info" type="submit">Cargar Detalles</button>
        </div>
    </form>
</div>
<br />
<div class="row">
    <div class="col-6 formulario">
        <form method="post" role="form">
            <div class="form-group">
                <h5>Codigo</h5>
                <input id="ID" asp-for="ID" class="form-control" value="@ViewData["Codigo"]" readonly required />
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input class="form-control" asp-for="NOMBRE" value="@ViewData["Nombre"]" Required />
            </div>
            <div class="form-group">
                <h5>Teléfono</h5>
                <input asp-for="TELEFONO" value="@ViewData["Telefono"]" class="form-control input-phone" maxlength="12" id="phone" placeholder="000-000-0000" pattern="[0-9]{3}[ -][0-9]{3}[ -][0-9]{4}" title="Formato: 000-000-0000" required />
            </div>
            <div class="form-group">
                <h5>Institucion</h5>
                <select asp-for="ID_UNIVERSIDAD" class="form-control" required>
                    @foreach (var Datos in (List<Universidades>)ViewBag.IDUniversidad)
                    {
                        <option value="@Datos.ID">@Datos.NOMBRE </option>
                    }
                </select>
            </div>
            <button type="submit" name="Save" value="save" class="btn btn-success">Guardar Cambios</button>
        </form>
    </div>


</div>

