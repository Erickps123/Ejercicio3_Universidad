@model Universidades
@{
    ViewData["Title"] = "AgregarUniversidad";
    DatosUniversidad universidad = new DatosUniversidad();
    ViewBag.universidad = universidad.Universidades;
    int i = 0;
}
<h1>Agregar Universidad</h1>
<hr />
<br />
<div class="col-5">
    <form method="post" asp-action="AgregarUniversidad">

        @if (ViewBag.universidad.Count >= 0)
        {
            i = ViewBag.universidad.Count + 1;
            <div class="form-group">
                <h5>ID</h5>
                <input class="form-control" value="@i" asp-for="ID" readonly required />
            </div>

        }
        else
        {
            <div class="form-group">
                <h5>Codigo</h5>
                <input class="form-control" value="0" asp-for="ID" readonly required />
            </div>
        }
        <div class="form-group">
            <h5>Nombre</h5>
            <input class="form-control" asp-for="NOMBRE" required />
        </div>
        <button class="btn btn-primary">Agregar</button>
    </form>
</div>
